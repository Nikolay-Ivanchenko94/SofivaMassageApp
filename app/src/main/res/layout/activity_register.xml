<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RegisterActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp">


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/BtnRegisterComeBack"
            android:background="@drawable/arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewRegisterHead"
            android:text="Регістрація користувача"
            android:textSize="28sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="80dp"
            android:padding="3dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterNameSurname"
            android:text="Ввеідть ваше Ім'я та прізвище"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/TextViewRegisterHead"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextRegisterNameSurname"
            android:hint="@string/EditTextRegisterNameSurname"
            android:textSize="23sp"
            android:transitionName="logo_text"
            android:fontFamily="@font/old_standard_tt"
            android:inputType="textPersonName"
            android:layout_below="@id/TextViewRegisterNameSurname"
            android:background="@drawable/border"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterBd"
            android:text="Введіть вашу дату народження"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/EditTextRegisterNameSurname"
            android:layout_marginTop="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextRegisterBd"
            android:hint="@string/EditTextRegisterBd"
            android:textSize="23sp"
            android:transitionName="logo_bd"
            android:inputType="date"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/TextViewRegisterBd"
            android:background="@drawable/border"
            android:padding="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterPhone"
            android:text="Введіть ваш номер телефону"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/EditTextRegisterBd"
            android:layout_marginTop="20dp"
            android:padding="3dp"/>


        <EditText
            android:id="@+id/EditTextRegisterPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextViewRegisterPhone"
            android:layout_marginTop="0dp"
            android:transitionName="logo_phone"
            android:background="@drawable/border"
            android:fontFamily="@font/old_standard_tt"
            android:hint="@string/EditTextRegisterPhone"
            android:inputType="phone"
            android:padding="3dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterEmail"
            android:text="Введіть ваш E-mail"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/EditTextRegisterPhone"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextRegisterEmail"
            android:hint="@string/EditTextRegisterEmail"
            android:textSize="23sp"
            android:transitionName="logo_email"
            android:fontFamily="@font/old_standard_tt"
            android:inputType="textEmailAddress"
            android:layout_below="@id/TextViewRegisterEmail"
            android:background="@drawable/border"
            android:padding="3dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterPsw"
            android:text="Введіть ваш пароль"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/EditTextRegisterEmail"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextRegisterPsw"
            android:hint="@string/EditTextRegisterPsw"
            android:inputType="textPassword"
            android:fontFamily="@font/old_standard_tt"
            android:textSize="23sp"
            android:transitionName="logo_psw"
            android:layout_below="@id/TextViewRegisterPsw"
            android:background="@drawable/border"
            android:padding="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewRegisterReturnPsw"
            android:text="Введіть повторно ваш пароль"
            android:textSize="23sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_below="@id/EditTextRegisterPsw"
            android:layout_marginTop="20dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextRegisterReturnPsw"
            android:hint="@string/EditTextRegisterReturnPsw"
            android:textSize="23sp"
            android:transitionName="logo_return_psw"
            android:fontFamily="@font/old_standard_tt"
            android:inputType="textPassword"
            android:layout_below="@id/TextViewRegisterReturnPsw"
            android:background="@drawable/border"
            android:padding="3dp"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnRegisterBtn"
            android:text="Зареєструватися"
            android:textSize="16sp"
            android:fontFamily="@font/old_standard_tt"
            android:layout_marginRight="75dp"
            android:minWidth="@dimen/cardview_compat_inset_shadow"
            android:minHeight="@dimen/cardview_compat_inset_shadow"
            android:layout_marginLeft="78dp"
            android:background="@drawable/btn_bg"
            android:padding="3dp"
            android:layout_below="@id/EditTextRegisterReturnPsw"
            android:layout_marginTop="20dp"/>






    </RelativeLayout>


</ScrollView>