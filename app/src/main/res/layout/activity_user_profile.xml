<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".UserProfileActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg">
            
            
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/BtnComeBack"
                android:layout_marginTop="15dp"
                android:background="@drawable/arrow"
                android:layout_marginLeft="20dp"/>


            <ImageView
                android:id="@+id/ImageViewUserProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_profile" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewUserProfile"
                android:hint="@string/TextViewUserProfile"
                android:textSize="30sp"
                android:layout_below="@id/ImageViewUserProfile"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:id="@+id/ImageViewUserName"
                android:background="@drawable/surname"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewUserProfileName"
                android:layout_alignStart="@id/ImageViewUserName"
                android:text="@string/TextViewUserProfileName"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/ViewUserName"
                android:layout_below="@id/TextViewUserProfileName"
                android:background="@android:color/darker_gray"/>



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ImageViewBd"
                android:background="@drawable/birthday"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ViewUserName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewUserProfileBd"
                android:hint="@string/TextViewUserProfileBd"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:layout_alignStart="@+id/ImageViewBd"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/TextViewUserProfileName"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/ViewUerProfileBd"
                android:layout_below="@+id/TextViewUserProfileBd"
                android:background="@android:color/darker_gray"/>



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ImageViewPhone"
                android:background="@drawable/phone"
                android:layout_below="@+id/TextViewUserProfileBd"
                android:layout_marginTop="40dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TextViewUserProfilePhone"
                android:hint="@string/TextViewUserProfilePhone"
                android:textSize="20sp"
                android:layout_below="@id/TextViewUserProfileBd"
                android:layout_alignStart="@+id/ImageViewPhone"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/ViewPhone"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/TextViewUserProfilePhone"
                android:layout_marginTop="20dp"/>



            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/ImageViewEmail"
                android:background="@drawable/email"
                android:layout_below="@+id/TextViewUserProfilePhone"
                android:layout_marginTop="40dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/TextViewUserProfileEmail"
                android:hint="@string/TextViewUserProfileEmail"
                android:textSize="20sp"
                android:layout_alignStart="@+id/ImageViewEmail"
                android:layout_below="@id/TextViewUserProfilePhone"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/ViewEmail"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/TextViewUserProfileEmail"
                android:layout_marginTop="20dp"/>














        </RelativeLayout>





    </LinearLayout>























































































































































































</ScrollView>